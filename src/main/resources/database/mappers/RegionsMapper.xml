<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
	  <!-- mapper namespace는 비우면 에러 -->
  <!-- namespace의 값은 중복 X -->
  <!-- 해당 mapper를 사용할 DAO의 풀패키지명으로 작성 -->
  <mapper namespace="com.winter.app.regions.RegionDAO">
  	<!-- detail -->
  	<!-- id는 DAO의 매서드명 -->
  	<select id="getDetail" resultType="RegionDTO" parameterType="RegionDTO">
  		SELECT * FROM REGIONS WHERE REGION_ID=#{region_id}
  	</select>
  	
  	
  	<!-- list -->
  	<select id="getList" resultType="RegionDTO">
  		SELECT * FROM REGIONS 
  	</select>
  	
  	<!--  Insert -->
  	<insert id="add"  parameterType="RegionDTO">
  		INSERT INTO REGIONS 
  		VALUES (EMPLOYEES_SEQ.NEXTVAL, #{region_name})
  	</insert>
  	
  	<!-- Update -->
  	<update id="update" parameterType="RegionDTO">	
  		UPDATE REGIONS SET REGION_NAME=#{region_name}
  		WHERE REGION_ID=#{region_id} 
  	</update>
  	
  	<!-- Delete -->	
  	<delete id="delete" parameterType="com.winter.app.regions.RegionDTO">
  		DELETE REGIONS WHERE REGION_NAME = #{region_name}
  	</delete>
  	
  	
  	
  	
  	
  </mapper>